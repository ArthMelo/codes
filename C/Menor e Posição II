#include<stdio.h>
int main(){
    int n;
    scanf("%d", &n);
    int vetor[n], i, menor = 1000, pos;
    for(i = 0; i < n; i++){
        scanf("%d", &vetor[i]);
        if (vetor[i]<menor){
            menor = vetor[i];
            pos = i;
        }

    }
    printf("Menor valor: %d\nPosicao:%d", menor, pos);
    return 0;
}
